# Stage Idol Calendar - Environment Variables Example
# Copy this file to .env and update with your actual values

# Application Version
APP_VERSION=1.0.0

# Production Mode (true = hide error details)
PRODUCTION_MODE=true

# Admin Credentials
# Generate password hash: php -r "echo password_hash('your_password', PASSWORD_DEFAULT);"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2y$10$abcdefghijklmnopqrstuv.wxyz0123456789ABCDEFGHIJKLMNOPQRS

# IP Whitelist (optional security feature)
ADMIN_IP_WHITELIST_ENABLED=false
# ADMIN_ALLOWED_IPS=127.0.0.1,::1,192.168.1.0/24

# Database
DB_PATH=calendar.db

# Cache Settings
DATA_VERSION_CACHE_TTL=600

# Rate Limiting
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW=3600
